<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
	</style>
	
	<style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">false</item>
	</style>
    
    

    <style name="RedRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/red_ratingbar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="GoldRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/gold_ratingbar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    
    <style name="DarkRedRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/dark_red_ratingbar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

</resources>
